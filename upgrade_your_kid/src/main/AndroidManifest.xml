<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.mvkoshenkova.upgradeyourkid">

    <application
        android:name=".BasicApp"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/UpgradeGamesTheme">
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/UpgradeGamesTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.GameListActivity"
            android:label="@string/games_activity"
            android:theme="@style/UpgradeGamesTheme" />
        <activity
            android:name=".ui.FavoriteListActivity"
            android:label="@string/title_activity_favorite_list"
            android:theme="@style/UpgradeGamesTheme" />
    </application>

</manifest>